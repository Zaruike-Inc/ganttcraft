{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "#types/*": [
        "./types/*"
      ],
      "#utils/*": [
        "./src/server/utils/*"
      ],
      "#srv/*": [
        "./src/server/*"
      ],
      "#types/builder/*": [
        "./types/builder/*"
      ],
      "#/srv/*": [
        "./components/server/*"
      ],
      "#/client/*": [
        "./components/client/*"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true
  },
  "exclude": [
    "src/app",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
